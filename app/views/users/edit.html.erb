<div class="signup-wrapper">
      <div class="cont">
        <div class="signup-wrapper-main">
          <div class="signup-title">
           <h1>ユーザー情報の編集</h1>
          </div>
          <div class="signup-contents">

            <div class="signup-content signup-1">
            <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
              <p>ユーザー名</p>
              <input class="signup-time" type="text" name="name" value="<%= @user.name %>">
            </div>

            <div class="signup-content signup-1">
              <p>画像</p>
              <!-- 画像用のフォームを追加してください -->
              <input name="image" type="file"> 
            </div> 

            <div class="signup-content signup-2">
              <p>メールアドレス</p>
              <input class="signup-thing" type="text" name="email" value="<%= @user.email %>">
            </div>

          </div>
          <input class="edit-submit" type="submit" name="" value="保存">
          <%= end %>
        </div>
      </div>
    </div>